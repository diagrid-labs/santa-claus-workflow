### Call the start endpoint of the web app
// @name startRequest
POST {{app_url}}/start
Content-Type: application/json

[
    {
        "Name" : "Alex",
        "GiftType" : "WoodenToy"
    },
    {
        "Name" : "Rene",
        "GiftType" : "Book"
    },
    {
        "Name" : "Robin",
